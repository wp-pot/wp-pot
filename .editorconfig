# editorconfig.org
root = true

[*]
end_of_line = LF
indent_size = 2
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.php]
indent_style = tab
indent_size = 4

[*.{md,txt}]
trim_trailing_whitespace = false
insert_final_newline = false

[*.json]
insert_final_newline = false

[.*]
insert_final_newline = false
