{
  "name": "wp-pot",
  "version": "1.9.9",
  "description": "Generate pot-files for WordPress localization",
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "lint": "eslint src test --ext .ts",
    "ava": "ava",
    "test": "npm run lint && npm run ava",
    "cover": "rimraf coverage && nyc ava"
  },
  "keywords": [
    "pot",
    "wordpress",
    "translation"
  ],
  "repository": "https://github.com/wp-pot/wp-pot.git",
  "homepage": "https://github.com/wp-pot/wp-pot",
  "bugs": "https://github.com/wp-pot/wp-pot/issues",
  "author": {
    "name": "Rasmus Bengtsson",
    "url": "https://github.com/rasmusbe"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "dist/"
  ],
  "main": "dist/index.js",
  "types": "dist",
  "license": "MIT",
  "dependencies": {
    "globby": "^11.0.3",
    "php-parser": "^3.0.2"
  },
  "devDependencies": {
    "@tsconfig/node12": "^1.0.9",
    "@types/node": "^15.0.2",
    "@types/zen-observable": "^0.8.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "ava": "^3.15.0",
    "eslint": "^7.25.0",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "zen-observable": "^0.8.15"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "coverage",
      "test"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "ava": {
    "files": [
      "test/*"
    ],
    "extensions": [
      "ts"
    ],
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ]
  }
}
