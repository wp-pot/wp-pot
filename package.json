{
  "name": "wp-pot",
  "version": "1.9.9",
  "description": "Generate pot-files for WordPress localization",
  "scripts": {
    "build": "pine build",
    "cover": "nyc --reporter clover npm run test-mocha",
    "fix-cs": "eslint src --ext .ts --fix",
    "prepublishOnly": "npm run build",
    "test-cs": "eslint src test --ext .ts",
    "test-mocha": "mocha --require ts-node/register ./test/*.ts",
    "test": "npm run test-cs && npm run test-mocha"
  },
  "keywords": [
    "pot",
    "wordpress",
    "translation"
  ],
  "repository": "https://github.com/wp-pot/wp-pot.git",
  "homepage": "https://github.com/wp-pot/wp-pot",
  "bugs": "https://github.com/wp-pot/wp-pot/issues",
  "author": {
    "name": "Rasmus Bengtsson",
    "url": "https://github.com/rasmusbe"
  },
  "engines": {
    "node": ">=12"
  },
  "files": [
    "lib/**/*"
  ],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/types",
  "license": "MIT",
  "dependencies": {
    "globby": "^11.0.3",
    "php-parser": "^3.0.2"
  },
  "devDependencies": {
    "@pinefile/pine": "^1.0.0-alpha.28",
    "@tsconfig/node12": "^1.0.9",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "esbuild": "^0.11.23",
    "eslint": "^7.25.0",
    "mocha": "^8.3.2",
    "nyc": "15.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4"
  }
}
